# Car game 

command = ""
started = False

 while True:
  command = input("> ").lower()

  if command == "stop":   
     if not started:
       print(" Car is already #stopped")
     else:
        started = False
        print("Car stopped")

  elif command == "start":
      if started:
       print("Car is already #started")
      else:
       started = True 
       print("Car started ...")

  elif command == "quit":
     break
  
  elif command == "help":
    print("""
   start - to start the car 
   stop - to stop the car
   quit - to quit
    """)    
  else:
       print("I don't understand that ")
