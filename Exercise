#Create players
# create own objects

class PlayerCharacter:
   def __init__(self, name, age):
      self.name = name         #attributes 
      self.age = age
      def run(self):
        print('run')


player1 = PlayerCharacter("Cindy",30)  
player2 = PlayerCharacter("May",20)     
print(player1.name,player1.age)
print(player2.age, player2.name)
print(type(player1))

