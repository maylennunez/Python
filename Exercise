# Print x 
numbers = [5, 2, 5, 2, 2]
result = "x" 
for number in numbers:
  for item in result:
    print(number * result)
    
    

-----------------------------------------------------------------------
# nested loop
numbers = [5, 2, 5, 2, 2]

for number in numbers:
   result = ""
   for count  in range(number):
     result += "x"
   print(result)
