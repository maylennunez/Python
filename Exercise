# Emoji converter 


   message = input("> ")
   words = message.split(" ") 
   output = ''
   emojis = {
   ";)" : "ğŸ˜‰",
   ":(" : "ğŸ™"
  }
   for word in words:
     output += emojis.get(word, word)+ " "
   print(output)
   
   
   
